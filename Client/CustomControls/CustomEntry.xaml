<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.CustomControls.CustomEntry"
             xmlns:hanlers="clr-namespace:Client.Handlers">
    <Frame Padding="10" BorderColor="Transparent" CornerRadius="0">
        <Grid ColumnDefinitions="25,*" ColumnSpacing="10">
            <Image VerticalOptions="Center" Source="email.png" HeightRequest="25" WidthRequest="25" />
            <hanlers:BorderlessEntry VerticalOptions="Center" Placeholder="Email" Grid.Column="1" />
        </Grid>
    </Frame>
</ContentView>
